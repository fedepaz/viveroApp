{
  "name": "viveroApp",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise Agricultural Management System",
  "packageManager": "pnpm@8.6.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:migrate:test": "dotenv -e .env.test pnpm --filter backend prisma migrate deploy"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "concurrently": "^8.2.0",
    "turbo": "^2.5.8"
  }
}
