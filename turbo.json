{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "prisma:generate": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {},
    "db:migrate": {
      "cache": false
    },
    "db:migrate:test": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "db:status": {
      "cache": false
    },
    "db:validate": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["BACKEND_NODE_ENV"]
    }
  }
}
